  "bugs": {
    "url": "https://github.com/janusznoszczynski/SocketCore.Client.TypeScript/issues"
  },
  "homepage": "https://github.com/janusznoszczynski/SocketCore.Client.TypeScript#readme",
  "devDependencies": {
    "@types/jest": "^22.2.3",
